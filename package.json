		"preversion": "pnpm svelte-package -i src"
	},
	"devDependencies": {
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/vite": "^4.1.18",
		"@tsconfig/svelte": "^5.0.6",
		"@types/node": "^25.0.6",
		"oxlint": "^1.38.0",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte-check": "^4.3.5",
		"svelte-eslint-parser": "^1.4.1",
		"tailwindcss": "^4.1.18",
		"typescript": "~5.9.3",
		"vite": "^7.3.1"
	},
	"dependencies": {
		"@material-symbols/svg-400": "^0.40.2",
		"@stanko/dual-range-input": "^1.0.1",
		"@types/common-tags": "^1.8.4",
		"cally": "^0.9.0",
		"common-tags": "^1.8.2",
		"daisyui": "^5.5.14",
		"fast-xml-parser": "^5.3.3",
		"svelte": "^5.46.1",
		"tailwindcss": "^4.1.18"
	},
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"types": "./dist/main.d.ts",
			"import": "./dist/main.js"
		},
		"./components/*": {
			"types": "./dist/components/*.svelte.d.ts",
			"import": "./dist/components/*.svelte"
		},
		"./utils/*": {
			"types": "./dist/utils/*.d.ts",
			"import": "./dist/utils/*.js"
		},
		"./vite/*": {
			"types": "./dist/vite/*.d.ts",
			"import": "./dist/vite/*.js"
		},
		"./app.tw.css": "./dist/app.tw.css",
		"./App.svelte": {
			"types": "./dist/App.svelte.d.ts",
			"import": "./dist/App.svelte"
		}
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"peerDependencies": {
		"vite": "^7.3.1"
	}
}
